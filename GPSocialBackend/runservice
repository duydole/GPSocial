PID=$(lsof -i :8765|grep -a java |awk '{print $2 }')
echo "PID" $PID
if [[ -z "$PID" ]]; then
  echo "GPSocial Backend is not running"
else
 echo "GPSocial Backend is running. KILL PID running:" $PID "to restart"
 kill -9 $PID
fi

./gradlew bootRun 
